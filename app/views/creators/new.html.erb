<% provide(:title, "Sign up") %>
<div class="row mt-4">
  <div class="col-md-6 m-auto">
    <h4 class="text-center mb-4">
      Sign up
    </h4>

    <%= form_for(@user, url: "/creators") do |f| %>
      <% if @user.errors.any? %>
        <div id="error_explanation">
          <h2>
            <%= "#{@user.errors.count} errors prohibited sign up" %>
          </h2>
          <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group">
        <%= f.label :full_name %>
        <%= f.text_field :full_name, auto_focus: true, class: "form-control", required: true %>
      </div>
  
      <div class="form-group">
        <%= f.label :username %>
        <%= f.text_field :username, class: "form-control", required: true %>
      </div>
   

      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, class: "form-control", required: true %>
      </div>

      <div class="form-group">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
        <%= f.password_field :password, autocomplete: "off", class: "form-control", required: true %>
      </div>      

      <%= f.submit "Sign up", class: "btn btn-primary mb-4", id: "signup" %>
    <% end %>
  </div>
</div>