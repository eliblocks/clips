<div class="modal fade" id="login-modal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Sign Up and Get 100 Free Minutes!</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= link_to "Continue with Facebook", 
                user_facebook_omniauth_authorize_path, 
                class: "facebook-button landing-button", 
                id: "auth-button" %>
        <%# if @test_users %>
          <!-- <hr>
          Test accounts:<br> -->
          <%# @test_users.each do |user| %>
            <%#= link_to user.full_name, users_test_login_path(user.id) %>
          <%# end %>
        <%# end %>

      </div>
    </div>
  </div>
</div>

<%= render 'layouts/signup_tracking' %>