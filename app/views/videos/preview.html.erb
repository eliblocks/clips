<% provide(:title, @video.title) %>
<div class="row">
  <div class="col-lg-10 m-auto">
    <%= cl_image_tag(@video.image, class: "img-fluid mt-3" ) %>
    <div class="video-info-container">
        <h4><%= @video.title %></h4>
        <span><%= @video.minutes %> Views</span> | <span><%= time_ago_in_words(@video.created_at) %> ago</span>
        <button type="button" class="btn btn-secondary share-link float-right" data-toggle="modal" data-target="#iframe-modal">Share</button>
        <hr>
      <div class="user-info">
       <%= cl_image_tag @video.user.account.image, client_hints: true, transformation: [ 
                          { gravity: "auto", width: "50", height: "50", radius: "max", crop: "fill" }] %>
        <%= link_to @video.user.full_name, user_path(@video.user), class: "uploader-link" %>
      </div>
    </div>
  </div>
</div>

<div class="modal fade" id="iframe-modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Embed Code</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        &lt;iframe width="560" height="315" src="https://www.aboutica.com/embeds/<%= @video.id %>" frameborder="0" allowfullscreen&gt;&lt;/iframe&gt;
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

<%= render 'shared/auth_modal' %>

<script>
  $(document).on("turbolinks:load", function() {
    $(".video-info-container").show();
    $('#login-modal').modal();
  });

</script>
